root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4

[*.scss]
indent_size = 4

[*.vue]
indent_size = 4
tab_width = 4

[{*.cjs,*.js}]
indent_size = 4
tab_width = 4

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 4

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
indent_size = 4
tab_width = 4

[{*.yaml,*.yml}]
indent_size = 2
